<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3 col-lg-offset-3">
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <h3>Registro</h3>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :first_name, "Nombre" %>
            <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :last_name, "Apellido" %>
            <%= f.text_field :last_name, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, "Email" %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, "Contraseña" %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Contraseña Confirmación" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
           <%= f.submit 'Registrate', :class => 'btn btn-warning' %>
           <%= link_to("Regresar", root_path, :class => 'btn btn-primary') %>
        <% end %>
      </div>
    </div>
  </div>
</div>