<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3 col-lg-offset-3">
      <br>
      <div class="authform well">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
          <h3>¿Olvidaste tu contraseña?</h3>
          <p>Le enviaremos instrucciones para restablecer la contraseña.</p>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email, "Email" %>
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          </div>
           <%= f.submit 'Restablecer', :class => 'btn btn-warning' %> 
        <%= link_to("Regresar", new_member_session_path, :class => 'btn btn-primary') %>
        <% end %>
      </div>
    </div>
  </div>
</div>