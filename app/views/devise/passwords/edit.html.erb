<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3 col-lg-offset-3">
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <h3>Cambiar contrase単a</h3>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <%= f.label :password, 'Nueva Contrase単a' %>
              <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
            <%= f.label :password_confirmation, 'Confirmar Nueva Contrase単a' %>
              <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
          </div>
           <%= f.submit 'Cambiar mi contrase単a', :class => 'btn btn-warning' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
