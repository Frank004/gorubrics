<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3 col-lg-offset-3">
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <h3>Iniciar Sesión</h3>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email, "Email" %>
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, "Contraseña" %>
            <%= f.password_field :password, class: 'form-control' %>
            <%- if devise_mapping.recoverable? %>
              <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: 'right' %>
            <% end -%>
          </div>
            <% if devise_mapping.rememberable? -%>
              <div class="checkbox" style="width:150px">
                <label>
                  <%= f.check_box :remember_me %> Recuérdame
                </label>
              </div>
            <% end -%>          
            <%= f.submit 'Iniciar', :class => 'btn btn-warning' %>
            <%= link_to("Regresar", root_path, :class => 'btn btn-primary') %>
        <% end %>
        <br>
            <%- if devise_mapping.registerable? %>
              Aun no tienes cuenta con nosotros? <%= link_to 'Registrate Aquí', new_registration_path(resource_name), class: 'right'  %>
            <% end -%>

      </div>
    </div>
  </div>
</div>