<div class="container">
  <div>
  <h1>Listing Evaluaciones</h1>
  </div>
  <div class="pull-right">
    <%= link_to new_event_evaluation_builder_path(@event) , class: 'btn btn-success' do%>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Categoria</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @evaluation_builders.each do |evaluation_builder| %>
        <tr>
          <td><%= link_to  evaluation_builder.name , evaluation_builder %></td>
          <td><%= evaluation_builder.category.name%></td>
          <td><%= link_to 'Editar', edit_evaluation_builder_path(evaluation_builder) %></td>
          <td><%= link_to 'Destruir', evaluation_builder, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>